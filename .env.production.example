# ============================================
# RAILWAY PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this to Railway environment variables

APP_NAME="Billiard Split Bill"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://billiardsplit-bill-production.up.railway.app

# Timezone & Locale
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

# Database (Railway will provide this automatically)
DB_CONNECTION=mysql
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_DATABASE=${MYSQLDATABASE}
DB_USERNAME=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}

# Session Configuration (IMPORTANT for HTTPS)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
SESSION_DOMAIN=.billiardsplit-bill-production.up.railway.app

# Sanctum Configuration (IMPORTANT for API)
SANCTUM_STATEFUL_DOMAINS=billiardsplit-bill-production.up.railway.app,www.billiardsplit-bill-production.up.railway.app

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=error

# Cache & Queue
CACHE_STORE=database
QUEUE_CONNECTION=database

# Mail (optional)
MAIL_MAILER=log
